@model IEnumerable<IranOtaku.Data.Entities.BookComment>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                تایید شده؟
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td >
                <p>
                    @Html.DisplayFor(modelItem => item.Text)
                <p/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmed)
            </td>
            <td>
                <form method="post">
                    <input class="btn btn-info" type="submit" value="تایید" asp-action="Confirm" asp-route-id="@item.Id">
                </form>
                <form method="post">
                    <input class="btn btn-danger" type="submit" value="حذف" asp-action="Delete" asp-route-id="@item.Id">
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
