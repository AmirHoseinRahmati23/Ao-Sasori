@model IranOtaku.Data.Entities.BookReport

@{
    ViewData["Title"] = "ذخیره گزارش";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveReport" method="post">
            <input type="hidden" asp-for="Id" value="@ViewBag.ReportId" />
            <div class="form-group">
                <label asp-for="ReportName" class="control-label"></label>
                <input asp-for="ReportName" class="form-control" />
                <span asp-validation-for="ReportName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Report" asp-route-id="@ViewBag.ReportId">بازگشت</a>
</div>

